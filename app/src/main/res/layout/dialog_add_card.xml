<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Передняя сторона"
        android:textColor="@color/colorGreyHint"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Задняя сторона"
        android:textColor="@color/colorGreyHint"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Контекст"
        android:textColor="@color/colorGreyHint"
        android:textSize="14sp"/>

    <EditText
        android:id="@+id/et_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="2"
        android:hint="Контекст поможет усвоению в памяти слова/фразы"
        android:textColorHint="@color/colorGreyHint"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Колода"
        android:textColor="@color/colorGreyHint"
        android:textSize="14sp"/>

    <Spinner
        android:id="@+id/spin_decks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>