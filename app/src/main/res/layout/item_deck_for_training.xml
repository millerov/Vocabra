<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    android:paddingHorizontal="12dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="3dp"
    android:layout_marginTop="12dp"
    android:id="@+id/card_deck"
    android:transitionName="deck"
    android:background="@drawable/bg_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_deck_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="114dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="hello" />

        <LinearLayout
            android:id="@+id/layout_counters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_train"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_new_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="10"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tv_ready_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="228"
                android:textSize="20sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_launch_white_24dp"
            android:background="?selectableItemBackgroundBorderless"/>

    </RelativeLayout>

</RelativeLayout>